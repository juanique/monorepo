cc_library(
    name = "http_parser",
    srcs = ["deps/http-parser/http_parser.c"],
    hdrs = ["deps/http-parser/http_parser.h"],
    includes = ["deps/http-parser/"],
)

cc_library(
    name = "headers",
    hdrs = glob([
        "src/*.h",
        "include/git2/**/*.h",
    ]),
    includes = ["include"],
)

cc_library(
    name = "zlib",
    srcs = glob(["deps/zlib/*.c"]),
    hdrs = glob(["deps/zlib/*.h"]),
    copts = [
        "-DSTDC=1",
    ],
    includes = [
        "deps/zlib",
    ],
    deps = [
        ":headers",
    ],
)

cc_library(
    name = "libgit2",
    srcs = glob(
        [
            "src/*.c",
            "src/*.h",
            "src/hash/hash_collisiondetect.h",
            "src/hash/hash_common_crypto.h",
            "src/hash/sha1dc/*.c",
            "src/hash/sha1dc/*.h",
            "src/unix/*.c",
            "src/unix/*.h",
            "src/transports/*.c",
            "src/transports/*.h",
            "src/xdiff/*.h",
            "src/xdiff/*.c",
            "src/streams/*.h",
            "src/streams/*.c",
        ],
        exclude = [
            "src/transports/winhttp.c",
        ],
    ) + [
    ],
    hdrs = glob(["include/**/*.h"]),
    copts = [
        "-Iexternal/libgit2/src",
        "-Wno-unused-function",
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":headers",
        ":http_parser",
        ":zlib",
        "@monorepo//third_party/libgit2:features",
    ],
)
