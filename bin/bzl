#!/bin/bash

GIT_ROOT=`git rev-parse --git-dir`
REPO_ROOT=`realpath $GIT_ROOT | sed 's/....$//'`
echo "Repo root is $REPO_ROOT"
BUILD_OUTPUT=/tmp/build_output
USER_ID=`id -u`
CURRENT_DIR=`pwd`

CACHE_DIR=$BUILD_OUTPUT/cache

if [[ ! -d $CACHE_DIR ]]; then
    echo "Creating $CACHE_DIR"
    mkdir -p $CACHE_DIR
    chmod 777 -R $BUILD_OUTPUT
fi

if docker ps | grep -q bazel-build
then
    echo "Build container already running."
else
    echo "Starting build container..."
    docker run -d --name=bazel-build -e USER=$USER_ID -u=$USER_ID -v $REPO_ROOT:$REPO_ROOT -v $BUILD_OUTPUT:$BUILD_OUTPUT -v $BUILD_OUTPUT/cache:/.cache -w $REPO_ROOT juanzolotoochin/ubuntu-build tail -f /dev/null
fi
docker exec -it -e USER=$USER_ID -u=$USER_ID  -w $CURRENT_DIR bazel-build bazelisk $@